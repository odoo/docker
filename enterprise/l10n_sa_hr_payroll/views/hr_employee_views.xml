<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_employee_view_form" model="ir.ui.view">
        <field name="name">hr.employee.view.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr_payroll.payroll_hr_employee_view_form"/>
        <field name="arch" type="xml">
            <group name="payroll_group" position="after">
                <group string='Saudi Payroll Information' name="l10n_sa_payroll_group" invisible="company_country_code != 'SA'" >
                    <field name="l10n_sa_employee_code" />
                </group>
            </group>
        </field>
    </record>
</odoo>
