<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="change_password_wizard_view" model="ir.ui.view">
        <field name="name">l10n_be_codabox.change.password.wizard.view.form</field>
        <field name="model">l10n_be_codabox.change.password.wizard</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <form string="CodaBox Change Password">
                <group>
                    <field name="current_fidu_password" password="True" required="1" placeholder="Current password"/>
                    <field name="new_fidu_password" password="True" required="1" placeholder="New Password"/>
                    <field name="confirm_fidu_password" password="True" required="1" placeholder="Confirm new password"/>
                </group>
                <footer>
                    <button name="l10n_be_codabox_change_password" string="Change password" type="object" class="btn-primary"/>
                    <button string="Close" class="btn-secondary" special="cancel" data-hotkey="x"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
