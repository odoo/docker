<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.whatsapp.website.sale</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <block id="website_shop_checkout" position="inside">
                <setting string="Send order details Using WhatsApp" id="website_sale_whatsapp" >
                    <div class="content-group">
                        <div class="row mt16">
                            <label class="o_light_label col-lg-3" string="WhatsApp Template" for="wa_sale_template_id"/>
                            <field name="wa_sale_template_id"/>
                        </div>
                    </div>
                </setting>
            </block>
        </field>
    </record>
</odoo>
