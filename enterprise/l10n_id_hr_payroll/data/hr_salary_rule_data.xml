        <field name="amount_python_compute">
result = - min(payslip._l10n_id_get_worked_days_rate() * contract.wage, payslip._rule_parameter('l10n_id_jp_threshold'))
result_rate = payslip._rule_parameter('l10n_id_jp_percent')
