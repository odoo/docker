<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="stock_barcode.ProductImageDialog">
        <Dialog title="props.title" size="'lg'" fullscreen="true"
                header="false" footer="false"
                t-on-click="props.close"
                contentClass="'o_barcode_image_dialog bg-transparent shadow-none border-0'">
            <div class="h-100 d-flex justify-content-center align-items-center">
                <img class="mw-100 mh-100" t-att-src="source" t-att-alt="props.title"/>
            </div>
        </Dialog>
    </t>
</templates>
