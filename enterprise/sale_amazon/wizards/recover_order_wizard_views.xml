<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="recover_order_wizard_form" model="ir.ui.view">
        <field name="name">Recover Order Wizard Form</field>
        <field name="model">amazon.recover.order.wizard</field>
        <field name="arch" type="xml">
            <form string="Recover Order">
                <group>
                    <field name="amazon_order_ref"/>
                </group>
                <footer>
                    <button string="Recover"
                            type="object"
                            name="action_recover_order"
                            class="btn-primary"/>
                    <button string="Discard"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
