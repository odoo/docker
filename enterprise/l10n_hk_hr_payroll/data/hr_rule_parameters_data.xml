<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- MPF -->
    <record id="l10n_hk_rule_parameter_mpf_threshold" model="hr.rule.parameter">
        <field name="name">MPF Threshold</field>
        <field name="code">l10n_hk_mpf_threshold</field>
        <field name="country_id" ref="base.hk"/>
    </record>
    <record id="l10n_hk_rule_parameter_mpf_threshold_2014" model="hr.rule.parameter.value">
        <field name="parameter_value">7100</field>
        <field name="rule_parameter_id" ref="l10n_hk_rule_parameter_mpf_threshold"/>
        <field name="date_from" eval="datetime(2014, 6, 1).date()"/>
    </record>
    <record id="l10n_hk_rule_parameter_mpf_maximum" model="hr.rule.parameter">
        <field name="name">MPF Maximum</field>
        <field name="code">l10n_hk_mpf_maximum</field>
        <field name="country_id" ref="base.hk"/>
    </record>
    <record id="l10n_hk_rule_parameter_mpf_maximum_2014" model="hr.rule.parameter.value">
        <field name="parameter_value">1500</field>
        <field name="rule_parameter_id" ref="l10n_hk_rule_parameter_mpf_maximum"/>
        <field name="date_from" eval="datetime(2014, 6, 1).date()"/>
    </record>

    <!-- Final Payment -->
    <record id="l10n_hk_rule_parameter_final_payment_threshold" model="hr.rule.parameter">
        <field name="name">Final Payment Threshold</field>
        <field name="code">l10n_hk_final_payment_threshold</field>
        <field name="country_id" ref="base.hk"/>
    </record>
    <record id="l10n_hk_rule_parameter_final_payment_threshold_2019" model="hr.rule.parameter.value">
        <field name="parameter_value">22500</field>
        <field name="rule_parameter_id" ref="l10n_hk_rule_parameter_final_payment_threshold"/>
        <field name="date_from" eval="datetime(2019, 1, 1).date()"/>
    </record>
</odoo>
