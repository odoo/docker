        <div class="position-relative rounded o-web-studio-report-search-record p-1 px-2 bg-white" style="max-width: 150px;" >
            <i class="fa fa-search position-absolute end-0 me-3 mt-1"/>
            <RecordSelector t-props="multiRecordSelectorProps"/>
