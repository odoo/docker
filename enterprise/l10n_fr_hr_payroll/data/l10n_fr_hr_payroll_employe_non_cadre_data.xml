    <!-- HR SALARY RULES-->
    <function model="hr.salary.rule" name="write">
        <value model="hr.salary.rule" search="[
            ('struct_id', '=', ref('l10n_fr_hr_payroll.hr_payroll_salary_structure_employe_non_cadre')),
            ('code', '=', 'BASIC')]"/>
        <value eval="{
            'code': 'BASIC',
            'sequence': 1}"/>
    </function>

    <function model="hr.salary.rule" name="write">
        <value model="hr.salary.rule" search="[
            ('struct_id', '=', ref('l10n_fr_hr_payroll.hr_payroll_salary_structure_employe_non_cadre')),
            ('code', '=', 'GROSS')]"/>
        <value eval="{
            'name': 'Salaire Brut',
            'code': 'GROSS',
            'sequence': 1000,
            'category_id': ref('hr_payroll.GROSS'),
            'amount_python_compute': &quot;result = categories['BASIC'] + categories['ALW'] - categories['DED']&quot;,
            }"/>
    </function>

