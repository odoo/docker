<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="account_reports.multi_currency_revaluation_report_warning_custom_rate">
        You are using custom exchange rates.
        <button
           class="btn btn-link p-0 align-baseline"
           t-on-click="() => this.controller.updateOption('currency_rates', {}, true)"
        >
            ⇒ Reset to Odoo’s Rate
        </button>
    </t>

    <t t-name="account_reports.multi_currency_revaluation_report_warning_multicompany">
        This report only displays the data of the active company.
    </t>
</templates>
