<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

       <!-- Tags available to feed the Balance Sheet report with accounts specifically chosen by the
       accountants. Each tag correspond to a section in the BS, none of them being really fixed by
       the law what accounts can be there. Using them is thus totally optional (reason why it's not
       linked to any account in l10n_es and defined here instead -->

        <record id="balance_sheet_11440_account" model="account.account.tag">
            <field name="name">Inversiones en empresas del grupo y asociadas a largo plazo - Derivados</field>
            <field name="applicability">accounts</field>
        </record>

        <record id="balance_sheet_11450_account" model="account.account.tag">
