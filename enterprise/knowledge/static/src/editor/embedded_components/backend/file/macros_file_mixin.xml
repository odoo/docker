<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="knowledge.MacrosFileButtons">
        <EmbeddedComponentToolbarButton
            hidden="!targetRecordInfo?.canPostMessages"
            icon="'fa-envelope'"
            label.translate="Send as Message"
            onClick.bind="onClickAttachToMessage"
        />
        <EmbeddedComponentToolbarButton
            hidden="!targetRecordInfo?.canAttachFiles"
            icon="'fa-paperclip'"
            label.translate="Use as Attachment"
            onClick.bind="onClickUseAsAttachment"
        />
    </t>
</templates>
